generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserAccountStatus {
  UNVERIFIED
  ACTIVE
  SUSPENDED
  DELETED
}

model User {
  id                String            @id @default(cuid())
  name              String
  email             String            @unique
  password          String
  accountStatus     UserAccountStatus @default(UNVERIFIED)
  verificationToken String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}
